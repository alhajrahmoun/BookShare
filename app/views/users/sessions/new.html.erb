            <div class="col-md-12 text-center">
                <span class="icon-spirte spirte-share">&nbsp;</span>
                <h1>Share your Book, Read new Book</h1>
            </div>
        </div>
      </div>
  </div>

<% Community.all.reverse.each do |community|%>
   <div class="community">
    <div class="container">
        <div class="row">
            <h3><%= community.name%></h3>
        </div>
        <div class="row">
        <% Book.where("community_id = #{community.id}").order("created_at DESC").limit(6).each do |book| %>
          <div class="col-md-2">
            <%= image_tag book.image.url , size: "177x249" %>
            <%=  link_to "#{book.title}", book_path(book) %>
          </div>
          <% end %>
          </div>
      </div>
  </div>
<% end %>

    
    
