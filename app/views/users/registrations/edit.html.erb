<!--            markup of sign up form-->
            <div class="col-md-8 col-md-offset-2">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put , class: "form-horizontal signup-form", :multipart => true}) do |f| %>
     
     <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :first_name, class: 'col-md-2 control-label' %>
    <div class="col-md-8">
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: 'col-md-2 control-label' %>
    <div class="col-md-8">
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    </div>

    <div class="form-group">
      <%= f.label :username, class: 'col-md-2 control-label' %>
    <div class="col-md-8">
      <%= f.text_field :username, class: 'form-control' %>
    </div>
    </div>

     <div class="form-group">
      <%= f.label :country, class: 'col-md-2 control-label' %>
    <div class="col-md-8">
      <%= country_select("user", "country", { priority_countries: ["SY"] }, { class: 'form-control', data: { attribute: "value" } })%>
    </div>
    </div>

    <div class="form-group">
      <%= f.label :Gender, class: 'col-md-2 control-label' %>
    <div class="col-md-8">
     <%= f.select(:gender, options_for_select([['male','male'],['female','female']],@user.gender),{include_blank: 'select gender'},{ class: 'form-control'}) %>
    </div>
    </div>

     <div class="form-group">
      <%= f.label :birthday, class: 'col-md-2 control-label' %>
    <div class="col-md-8">
      <%= date_field :user, :birthday, class: 'form-control' %>
    </div>
    </div>


     <div class="form-group ">
     <div class="col-md-5 col-xs-8 col-md-offset-2">
        <%= f.label :upload_image %>
        <%= f.file_field :image %>             
     </div>
     <div class="col-md-3 col-xs-4">
        <%= f.submit "Done", class: 'form-control btn btn-primary' %>
    </div>
    </div>
 
<% end %>

