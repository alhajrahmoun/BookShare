<%= stylesheet_link_tag 'register', media: 'all', 'data-turbolinks-track' => true %>

     <div class="jumbotron">
    <div class="container">
            <nav class="navbar navbar-default" role="navigation">
                <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                    <%= link_to "Home", root_path, class: "navbar-brand"%></li>
                    </div>
                
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><%= link_to "Home", root_path%></li>
                        <li><%=link_to "Communities", communities_path %></li>
                        <% if user_signed_in?%>
                         <li><%=link_to "Sign Out", users_sign_out_path%></li>
                         <li><%=link_to "Profile", user_path(current_user) %></li>
                          <% else %>
                        <li ><a href="#">Contact Us</a></li>
                        <li ><a href="#">About</a></li>
                        <% end %>
                    </ul>
                </div>
            </nav>


            <div class="col-md-8 col-md-offset-2">
  <%= form_for [@book,@book.authors.build], html: {class: "form-horizontal signup-form"} do |f| %>

    <div class="form-group">
      <%= f.label :first_name, class: 'col-md-2 control-label' %>
    <div class="col-md-8">
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: 'col-md-2 control-label' %>
    <div class="col-md-8">
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    </div>

     <div class="col-md-3 col-xs-4">
        <%= f.submit "Add Author", class: 'form-control btn btn-primary' %>
    </div>
    </div>
 
<% end %>

