var new_comment = $("<%= escape_javascript(render(:partial => @comment))%>").hide();
$('#post_<%= @comment.post_id %> * .comments').append(new_comment);
$('#comment_<%= @comment.id %>').fadeIn('slow');
$('#new_comment')[0].reset();
$("#post_<%= @post.id %> * .comment-info").html('<p><%= pluralize(@likes, "like")%>, <%= pluralize(@post.comments.count, "Comment") %> </p>');